%div{:class => "container"}

  %table#pup{:class => "table"}
    %thead
      %tr
        %th Puppy Name
        %th Breed
        %th Breeder
        %th Breeder Responsibility
        %th Overall Health
        %th Trainability
        %th Social Behavior
        %th Energy Level
        %th Simpatico Rating

    %tbody
      %tr
        %td= @pup.pup_name
        %td= @pup.breed.name
        %td= @pup.breeder.name
        %td= @pup.breeder_responsibility
        %td= @pup.overall_health
        %td= @pup.trainability
        %td= @pup.social_behavior
        %td= @pup.energy_level
        %td= @pup.simpatico_rating


  = button_to 'Delete pup', pup_path(:id => @pup.id), :method => :delete
  
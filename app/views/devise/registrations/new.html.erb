<div class="content" id = "singup">
  <div class="title">Create account</div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field">
      <%= f.text_field :username, placeholder: "username", autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, placeholder: "email", autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, placeholder: "password(8 characters minimum)",autocomplete: "off" %>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "password confirmation",autocomplete: "off" %>
    </div>
  <br>
  
    <div>
        <span> By clicking “I agree” below you agree to SimpaticoPup’s <%= link_to "Terms of Service", terms_of_service_path %> and our <%= link_to "Privacy Policy", privacy_policy_path %>, which describes how we process your information.</span>
    </div>
    <div>
        <input type="checkbox" id="agreement" required/>
        <label for="agreement"></label><span> I agree (required)
    </div>
    
    
    <br>
    <div>
        <input type="checkbox" id="subscribe_newsletter" 'subscribe_newsletter', 'yes'/>
        <label for="subscribe_newsletter" 'subscribe_newsletter', 'yes'></label><span> Click here if we may add you to our mailing list to receive occasional updates on the progress of our website.
    </div>
    <br>

  
    <div class="action" >
      <%= f.submit "Submit" %>
    </div>
    
  <% end %>
  
  
  <div class="buttons">
    <%= render "devise/shared/links" %>
  </div>
</div>